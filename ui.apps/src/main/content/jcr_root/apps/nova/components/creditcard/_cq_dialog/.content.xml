<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Credit Card Component"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
        <items jcr:primaryType="nt:unstructured">
            <column
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <cards
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                        composite="{Boolean}true"
                        fieldLabel="Cards">
                        <field
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/container"
                            name="./cards">
                            <items jcr:primaryType="nt:unstructured">
                                <column jcr:primaryType="nt:unstructured">
                                    <items jcr:primaryType="nt:unstructured">
                                        <cctitle
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                            fieldDescription="Provide Credit Card Name"
                                            fieldLabel="Credit Card Name"
                                            name="./cctitle"/>
                                        <ccdescription
                                            jcr:primaryType="nt:unstructured"
                                            fieldDescription="About Credit Card"
                                            fieldLabel="Credit Info"
                                            name="./ccdescription"/>
                                        <ccimage
                                            jcr:primaryType="nt:unstructured"
                                            jcr:title="Logo Image"
                                            sling:resourceType="granite/ui/components/foundation/form/fieldset">
                                            <items jcr:primaryType="nt:unstructured">
                                                <file
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                                                    autoStart="{Boolean}false"
                                                    class="cq-droptarget"
                                                    fieldDescription="Upload the files"
                                                    fileNameParameter="./fileName"
                                                    fileReferenceParameter="./fileReference"
                                                    mimeTypes="[image/gif,image/jpeg,image/png,image/tiff,image/svg+xml,application/pdf]"
                                                    multiple="{Boolean}false"
                                                    name="./file"
                                                    title="Upload Image Asset"
                                                    uploadUrl="${suffix.path}"
                                                    useHTML5="{Boolean}true"/>
                                            </items>
                                        </ccimage>
                                        <ccbenefit
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                            fieldDescription="Give Benefits of card"
                                            fieldLabel="Credit Card Benefit"
                                            name="./ccbenefit"/>
                                        <features
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                            composite="{Boolean}true"
                                            fieldLabel="Features"
                                            name="./features">
                                            <field
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <column
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                                        <items jcr:primaryType="nt:unstructured">
                                                            <amendents
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                fieldDescription="Provide Amendents "
                                                                fieldLabel="Amendents"
                                                                name="./amendents"/>
                                                            <fee
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                fieldDescription="Fee and Offers"
                                                                fieldLabel="Fee and Offers"
                                                                name="./fee"/>
                                                        </items>
                                                    </column>
                                                </items>
                                            </field>
                                        </features>
                                    </items>
                                </column>
                            </items>
                        </field>
                    </cards>
                </items>
            </column>
        </items>
    </content>
</jcr:root>