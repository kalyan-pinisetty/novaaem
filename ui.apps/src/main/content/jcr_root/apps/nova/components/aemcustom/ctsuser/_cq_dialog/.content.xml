<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="CTS User"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <name
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                emptyText="Enter name"
                fieldDescription="Enter name"
                fieldLabel="Name"
                name="./value"
                validator="nova-name-validator"/>
            <email
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                emptyText="Enter Email"
                fieldDescription="Enter Email"
                fieldLabel="Email"
                name="./email"/>
            <dob
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/form/datepicker"
                emptyText="Enter dob"
                fieldDescription="Enter dob"
                fieldLabel="DOB"
                name="./dob"/>
            <generateid
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                emptyText="Enter name"
                fieldDescription="Enter name"
                fieldLabel="Generate ID"
                name="./generateid"/>
            <fruitDropdown
                granite:class="cq-dialog-dropdown-showhide"
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                cq-dialog-dropdown-showhide-target=".fruit-showhide-target"
                emptyText="Enter name"
                fieldDescription="Enter name"
                fieldLabel="Fruit"
                name="./fruit">
                <items jcr:primaryType="nt:unstructured">
                    <apple
                        jcr:primaryType="nt:unstructured"
                        text="Apple"
                        value="apple"/>
                    <mangpo
                        jcr:primaryType="nt:unstructured"
                        text="Mango"
                        value="mango"/>
                    <cherry
                        jcr:primaryType="nt:unstructured"
                        text="Cherry"
                        value="cherry"/>
                    <date
                        jcr:primaryType="nt:unstructured"
                        text="Date"
                        value="date"/>
                </items>
            </fruitDropdown>
        </items>
    </content>
</jcr:root>
