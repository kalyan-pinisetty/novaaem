<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="My Component"
    sling:resourceType="cq/gui/components/authoring/dialog"
    extraClientlibs="[nova.components.aemcustom.editor]"
    mode="edit">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <textfield
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                fieldLabel="Text Field"
                name="./textfield"
                validation="nova-text-validator"/>
            <date
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/form/datepicker"
                fieldLabel="Date"
                name="./date"/>
            <pathbrowser
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/form/pathbrowser"
                fieldLabel="Path Browser"
                name="./pathbrowser"/>
            <checkbox
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                name="./checkbox"
                text="Check Field"/>
            <radiobutton
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/form/radiogroup"
                fieldLabel="Radio Button"
                name="./radiobutton"
                text="Radio Button"/>
            <dropdown
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                fieldLabel="Countries"
                name="./dropdown">
                <items jcr:primaryType="nt:unstructured">
                    <india
                        jcr:primaryType="nt:unstructured"
                        text="India"
                        value="India"/>
                    <usa
                        jcr:primaryType="nt:unstructured"
                        text="USA"
                        value="USA"/>
                </items>
            </dropdown>
            <fileupload
                jcr:primaryType="nt:unstructured"
                jcr:title="Logo Image"
                sling:resourceType="granite/ui/components/foundation/form/fieldset"
                fieldDescription="Upload Image">
                <items jcr:primaryType="nt:unstructured">
                    <file
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                        autoStart="{Boolean}false"
                        class="cq-droptarget"
                        fieldDescription="Upload the files"
                        fileNameParameter="./fileName"
                        fileReferenceParameter="./fileReference"
                        mimeTypes="[image/gif,image/jpeg,image/png,image/tiff,image/svg+xml,application/pdf]"
                        multiple="{Boolean}false"
                        name="./file"
                        title="Upload Image Asset"
                        uploadUrl="${suffix.path}"
                        useHTML5="{Boolean}true"/>
                </items>
            </fileupload>
            <description
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                fieldLabel="Text Field"
                name="./description"/>
            <experience
                granite:class="nova-multifield"
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                composite="{Boolean}true"
                fieldLabel="Experience"
                validation="nova-exp-validator">
                <field
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/container"
                    name="./experience">
                    <items jcr:primaryType="nt:unstructured">
                        <company
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                            emptyText="Enter Company"
                            fieldDescription="Enter Company"
                            fieldLabel="Company"
                            name="./company">
                            <granite:data
                                jcr:primaryType="nt:unstructured"
                                max-items="\{Long}5"
                                min-items="\{Long}3"/>
                        </company>
                        <exp
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                            emptyText="Enter Years Of Exp"
                            fieldDescription="Enter Years Of Exp"
                            fieldLabel="Enter Years Of Exp"
                            name="./exp">
                            <granite:data
                                jcr:primaryType="nt:unstructured"
                                max-items="\{Long}5"
                                min-items="\{Long}3"/>
                        </exp>
                    </items>
                </field>
            </experience>
        </items>
    </content>
</jcr:root>
