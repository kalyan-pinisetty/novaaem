<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Nova Features"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <contenttab
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Features Tab"
                        sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <maintitle
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                emptyText="Enter title"
                                fieldDescription="Enter title"
                                fieldLabel="Title"
                                name="./maintitle"/>
                            <iconcards
                                jcr:primaryType="nt:unstructured"
                                jcr:title="iconcards"
                                sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                composite="{Boolean}true"
                                fieldLabel="Icons">
                                <field
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/container"
                                    name="./iconcards">
                                    <items jcr:primaryType="nt:unstructured">
                                        <icon
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                            emptyText="Select icon"
                                            fieldDescription="Select icon"
                                            fieldLabel="Icon"
                                            name="./icon"/>
                                        <iconcolor
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                            emptyText="Select icon color"
                                            fieldDescription="Select icon color"
                                            fieldLabel="Icon Color"
                                            name="./iconcolor"/>
                                        <icontitle
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                            emptyText="Enter icon title"
                                            fieldDescription="Provide icon title"
                                            fieldLabel="icontitle"
                                            name="./icontitle"/>
                                    </items>
                                </field>
                            </iconcards>
                        </items>
                    </contenttab>
                    <image
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Image Tab"
                        sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <fileupload
                                jcr:primaryType="nt:unstructured"
                                jcr:title="Logo Image"
                                sling:resourceType="granite/ui/components/foundation/form/fieldset">
                                <items jcr:primaryType="nt:unstructured">
                                    <file
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                                        autoStart="{Boolean}false"
                                        class="cq-droptarget"
                                        fieldDescription="Upload the files"
                                        fileNameParameter="./fileName"
                                        fileReferenceParameter="./fileReference"
                                        mimeTypes="[image/gif,image/jpeg,image/png,image/tiff,image/svg+xml,application/pdf]"
                                        multiple="{Boolean}false"
                                        name="./file"
                                        title="Upload Image Asset"
                                        uploadUrl="${suffix.path}"
                                        useHTML5="{Boolean}true"/>
                                </items>
                            </fileupload>
                        </items>
                    </image>
                    <featuredes
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Feature Description"
                        sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <title
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                emptyText="Enter title"
                                fieldDescription="Enter title"
                                fieldLabel="Title"
                                name="./title"/>
                            <description
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                emptyText="Enter Description"
                                fieldDescription="Enter Description"
                                fieldLabel="Description"
                                name="./description"/>
                            <linktext
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                emptyText="Button text"
                                fieldDescription="Button text"
                                fieldLabel="Button Text"
                                name="./linktext"/>
                            <links
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                emptyText="Button link"
                                fieldDescription="Button Link"
                                fieldLabel="Button Link"
                                name="./links"/>
                        </items>
                    </featuredes>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
